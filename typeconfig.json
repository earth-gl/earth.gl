{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "suppressImplicitAnyIndexErrors": true,
    },
    "files": [
        "core.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
